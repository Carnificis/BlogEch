<h2>Top trending Post</h2>
{{#each Posts as |post|}}
<div class="card text-center">
  <div class="card-header">
    {{post.title}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{post.body}}</h5>
    <a href="/api/comments/{{post.id}}" class="btn btn-primary">Comment</a>
  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>
</div>
{{/each}}
<form class="add-post">
  <div class="mb-3">
    <label for="exampleInputText" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" aria-describedby="text">
  </div>
  <div class="mb-3">
    <label for="body" class="form-label">Body</label>
    <input type="text" class="form-control" id="body" aria-describedby="body">
  </div>

  <button type="submit" class="btn btn-primary">Add Post</button>
</form>

<script src="/js/profile.js"></script>